<div class="container mt-5">
  <h2 class="mb-4">Login</h2>
  
  <%= form_with scope: :user, url: session_path(:user), local: true, class: "needs-validation" do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="form-check mt-3">
      <%= form.check_box :remember_me, class: "form-check-input" %>
      <%= form.label :remember_me, class: "form-check-label" %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Criar uma nova conta", new_user_registration_path %> |
    <%= link_to "Esqueceu sua senha?", new_user_password_path %>
  </div>
</div>
