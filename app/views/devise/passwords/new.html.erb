<div class="container mt-5">
  <h2 class="mb-4">Esqueceu sua senha?</h2>

  <%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true, class: "needs-validation" do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit "Enviar instruções de recuperação", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Voltar ao login", new_user_session_path %>
  </div>
</div>
