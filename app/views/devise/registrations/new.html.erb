<div class="container mt-5">
  <h2 class="mb-4">Registrar</h2>

  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "needs-validation" do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", required: true, autofocus: true %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control", required: true %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit "Registrar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Já tem uma conta? Faça login", new_user_session_path %>
  </div>
</div>
